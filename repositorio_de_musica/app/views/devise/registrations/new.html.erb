<%= devise_error_messages! %>
<h1 class="text-center">Regístrate</h1>
 <p class="text-center">*Campos obligatorios</p>
<br>
<div class="form-horizontal">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email, "Correo electrónico* ", class:"control-label col-sm-3"%>
      <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, placeholder:"Ej: pepitopeerez@ejemplo.com", class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :nombres, "Nombres* ", placeholder:"", class:"control-label col-sm-3"%>
      <div class="col-sm-8">
        <%= f.text_field :nombres, autocomplete: "on", placeholder:"Ej: Pepe", class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :apellidos, "Apellidos* ", class:"control-label col-sm-3"%>
      <div class="col-sm-8">
        <%= f.text_field :apellidos, autocomplete: "on", placeholder:"Ej: perez", class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
    <%= f.label :apodo, "Apodo* ", class:"control-label col-sm-3"%>
      <div class="col-sm-8">
        <%= f.text_field :apodo, autocomplete: "on", placeholder:"Ej: pepitope", class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, "Contraseña* ",class:"control-label col-sm-3"%>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "off",class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmar contraseña* ",class:"control-label col-sm-3"%>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :imagenPerfil, "Imagen de perfil ",class:"control-label col-sm-3"%>
      <div class="col-sm-8">
        <%= f.file_field :imagenPerfil %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Regístrame", class:"btn btn-default" %>
    </div>
<%end%>
<div class="form-group text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>