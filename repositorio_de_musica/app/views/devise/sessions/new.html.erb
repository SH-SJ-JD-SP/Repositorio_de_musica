<%= devise_error_messages! %>
<h2 class="text-center">Iniciar sesión</h2>
<p class="text-center">*Campos obligatorios</p>

<div class="form-horizontal">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email , "Correo electrónico* ", class:"control-label col-sm-3"%>
    <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "Digita tu correo electrónico" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Contraseña* ",class:"control-label col-sm-3" %>
    <div class="col-sm-8">
        <%= f.password_field :password, autofocus: false, class:"form-control", placeholder: "Digita tu contraseña" %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
    <div class="col-sm-9" style="float:right;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordarme" %>
      </div>
    </div>
  <% end -%>
  <div class="form-actions">
    <%= f.submit "Iniciar sesión", class:"btn btn-default" %>
  </div>
<% end %>
<div class="form-group text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>