<%= render 'shared/search'%>
<h2 class="text-center">Cambiar mi contraseña</h2>
<form class="form-horizontal" role="form">
<%= form_for(resource, as: resource_name,class:"form-horizontal",  url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <% if @minimum_password_length %>
    <p class="text-center"><em >(<%=@minimum_password_length%> caracteres mínimo)</em></p>
    <%end%>
  <div class="form-group">
    <%= f.label :password, "Nueva contraseña", class:"control-label col-sm-3" %>

    <div class="col-sm-8">
    <%= f.password_field :password, autofocus: true, class:"form-control", placeholder: "Digita tu nueva contraseña"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña", class:"control-label col-sm-3" %>
    <div class="col-sm-8">
    <%= f.password_field :password_confirmation, class:"form-control", placeholder: "Repite tu nueva contraseña" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Cambiar mi contraseña", class:"btn btn-default" %>
  </div>
<% end %>
</form>
<%= render "devise/shared/links" %>
